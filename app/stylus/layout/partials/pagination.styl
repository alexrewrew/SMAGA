.pagination
  display flex
  flex-wrap nowrap
  flex-direction row
  justify-content center
  align-items center
  li
    &:first-child
      a
        font-size 2.125em
        margin-right 25px
        color $black
        &:after
          display none
        &:hover
          transform translateX(-10px)
    &:last-child
      a
        font-size 2.125em
        margin-left 25px
        color $black
        &:after
          display none
        &:hover
          transform translateX(10px)
    a
      margin 0 10px
      min-width 24px
      display block
      text-align center
      color $black
      font-weight: 600;
      line-height: 1.25;
      color $gray-text2
      position relative
      z-index 2
      &:after
        pseudo(block, absolute)
        left 0
        right 0
        bottom 1px
        z-index -1
        width 100%
        background $yellow
        height 10px
        opacity 0
        transitions()
      &:hover
        color $black
        &:after
          opacity 1
    .active
      color $black
      &:after
        opacity 1
